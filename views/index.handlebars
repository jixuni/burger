<div class="container">
    <div class="text-center">
        <h1>Favorite Burgers</h1>
        <div class="col-12">
            <img src="../img/burger_image.jpg" class="img-fluid" alt="Burger image" width="300px" height="300px">
        </div>
    </div>

    <div class="row text-center">
        <div class="col-12">
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" id="burger">
                </div>
                <button type="submit" id="burgerBtn" class="btn btn-primary">Burger Me!</button>
            </form>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-6"> 
            <h2>Burger List</h2>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                
                    
                    <p><span class="label" Burger Name:></span> {{this.burger_name}}</p>
                    
                    <button data-id="{{this.id}}" class="delburger btn btn-danger">Devoured</button>
                
                {{/if}}
                {{/each}}
            </ul>
        </div>
        
        <div class="col-6">
            <h2>Devoured List</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
            
                
                    <p><span class="label" Burger Name:></span> {{this.burger_name}}</p>
                    
                
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>